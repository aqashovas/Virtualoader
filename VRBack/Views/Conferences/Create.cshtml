                        @Html.EditorFor(model => model.Text1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Text1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group d-flex">
                    <div class=" ml-auto">
                        <input type="submit" value="Create" class="btn btn-default btnpost" />
                    </div>
                </div>
            </div>
        }
    </div>
 
    
    <div class="backlist d-flex container-fluid">
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
