                        @Html.ValidationMessageFor(model => model.Link2, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.Text1, htmlAttributes: new { @class = "control-label col-md-2 formtext" })
